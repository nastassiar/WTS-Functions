{
  "bindings": [
    {
      "name": "item",
      "type": "serviceBusTrigger",
      "direction": "in",
      "queueName": "sms_userstore",
      "connection": "AzureWebJobsServiceBus",
      "accessRights": "Manage"
    },
    {
      "type": "documentDB",
      "name": "documents",
      "databaseName": "WTSSocialMediaDB",
      "collectionName": "userrecords",
      "connection": "CosmosDB_Connection",
      "direction": "in",
      "sqlQuery": "SELECT * FROM c where c.phoneNumber = {phoneNumber}"
    },
    {
      "type": "documentDB",
      "name": "outputDocument",
      "databaseName": "WTSSocialMediaDB",
      "collectionName": "userrecords",
      "createIfNotExists": true,
      "connection": "CosmosDB_Connection",
      "direction": "out"
    }
  ],
  "disabled": false
}